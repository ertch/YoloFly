<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="@color/logo_dark_green"
    android:elevation="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- Photoselection Button (Left) -->
    <LinearLayout
        android:id="@+id/btn_photoselection"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/logo_green"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu_photoselection"
            app:tint="?attr/colorOnSurface" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_photoselection"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Camera Button (Center) -->
    <LinearLayout
        android:id="@+id/btn_camera"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/logo_green"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_menu_camera"
            android:padding="6dp"
            app:tint="?attr/colorOnSurface" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_camera"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="4dp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Transects Button (Right) -->
    <LinearLayout
        android:id="@+id/btn_transects"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/logo_green"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu_transects"
            app:tint="?attr/colorOnSurface" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_transects"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</LinearLayout>
